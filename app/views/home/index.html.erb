<div id="home_index" class="bg-white">
  <div class="mx-auto max-w-1920">
    <div data-controller="google-map" class="p-6 space-y-6">
      <h2>撮影スポットマップ</h2>
      <div data-google-map-target="map" class="w-full h-full aspect-[3/1] min-h-[50vh] rounded-lg" data-posts=<%= @posts_json %>></div>
    </div>
    <div class="p-6 space-y-6">
      <div class="flex items-center justify-between">
        <h2>新着投稿</h2>
        <%= link_to "さらに表示", search_posts_path, class: "see-more-button" %>
      </div>
      <div class="grid gap-x-4 gap-y-8 md:grid-cols-2 md:gap-x-6 lg:grid-cols-4">
        <%= render partial: "new_post", collection: @new_posts %>
      </div>
    </div>
  </div>
</div>
