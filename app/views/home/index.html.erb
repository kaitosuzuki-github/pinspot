<div class="bg-white">
  <div>
    <div class="p-6 space-y-6">
      <h2>撮影スポットマップ</h2>
      <div id="map" class="h-72 md:h-600 rounded-lg" data-posts=<%= @posts_json %>></div>
    </div>
    <div class="p-6 space-y-6">
      <div class="flex items-center justify-between">
        <h2>新着投稿</h2>
        <%= link_to "さらに表示", search_posts_path, class: "see-more-button" %>
      </div>
      <div class="grid gap-x-4 gap-y-8 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4">
        <%= render partial: "new_post", collection: @new_posts %>
      </div>
    </div>
  </div>
</div>
