<div class="bg-white">
  <div class="flex flex-col items-center px-6 py-8 mx-auto md:h-screen md:py-24">
    <div class="w-full bg-white rounded-lg shadow sm:max-w-md">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h2>パスワードを変更</h2>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4 md:space-y-6" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field space-y-2">
            <div>
              <%= f.label :password, "新規パスワード" %>
              <% if @minimum_password_length %>
                <span>(<%= @minimum_password_length %>文字以上)</span>
              <% end %>
            </div>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-field" %>
          </div>
          <div class="field space-y-2">
            <%= f.label :password_confirmation, "新規パスワード（確認用）" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
          </div>
          <div class="actions">
            <%= f.submit "パスワードを変更", class: "submit-button w-full" %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
