<% if user_signed_in? %>
  <div id="comments" class="bg-white max-w-full lg:basis-1/3">
    <%= turbo_frame_tag "comments_turbo" do %>
      <div class="p-4 space-y-4 md:p-6">
        <h3>コメント (<%= comments.size %>)</h3>
        <%= render "comment_form", post: post, new_comment: new_comment %>
        <div class="space-y-2 divide-y">
          <%= render partial: "comment", collection: comments, locals: { post_id: post.id } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
