<div id="dropdownWrap" class="relative flex items-center justify-start lg:justify-end">
  <%= button_tag type: "button", id: "dropdownToggle", class: "search-dropdown-button" do %>
    <span>ソート</span>
    <%= render "shared/icons/expand", class_list: "icon-small fill-current" %>
  <% end %>
  <div id="dropdownMenu" class="dropdown-menu fade-out absolute z-10 top-full mt-4 p-4 w-fit flex flex-col gap-2">
    <%= f.label :sorts, class: "sr-only" %>
    <%= button_tag class: "search-detail-button" do %>
      <%= f.radio_button :sorts, "created_at desc", checked: true, class: "pointer-events-none radio-button" %>
      <%= f.label :sorts, "新しい投稿", value: "created_at desc", class: "search-detail-label" %>
    <% end %>
    <%= button_tag class: "search-detail-button" do %>
      <%= f.radio_button :sorts, "created_at asc", class: "pointer-events-none radio-button" %>
      <%= f.label :sorts, "古い投稿", value: "created_at asc", class: "search-detail-label" %>
    <% end %>
  </div>
</div>
