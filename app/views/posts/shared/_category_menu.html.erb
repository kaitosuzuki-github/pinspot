<div id="dropdownWrap" class="relative flex items-center justify-center">
  <%= button_tag type: "button", id: "dropdownToggle", class: "flex items-center whitespace-nowrap py-1 px-4 border border-gray-700 border- rounded-full text-gray-700" do %>
    <span>カテゴリー</span>
    <%= render "shared/icons/expand", class_list: "h-4 w-4 fill-current" %>
  <% end %>
  <div id="dropdownMenu" class="fade-out duration-100 absolute z-10 top-full mt-4 bg-white rounded-lg shadow p-4 w-96 grid grid-cols-2 gap-y-1 gap-x-10">
    <%= f.label :categories_id_in, class: "sr-only" %>
    <%= f.collection_check_boxes(:categories_id_in, categories, :id, :name) do |b| %>
      <%= button_tag class: "text-left pr-2 flex items-center gap-2" do %>
        <%= b.check_box class: "pointer-events-none rounded bg-gray-50 border border-gray-300" %>
        <%= b.label class: "cursor-pointer w-full inline-block text-gray-700" %>
      <% end %>
    <% end %>
  </div>
</div>
