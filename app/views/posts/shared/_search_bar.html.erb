<%= f.label :title_or_location_cont, class: "mb-2 text-sm font-medium text-gray-900 sr-only" %>
<div class="relative h-full w-full max-w-4xl">
  <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
    <%= render "shared/icons/search", class_list: "w-5 h-5 fill-gray-500" %>
  </div>
  <%= f.search_field :title_or_location_cont, class: "block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-green-400 focus:border-green-400", placeholder: "Search Pinspot" %>
  <%= f.submit class: "cursor-pointer text-white absolute right-2.5 bottom-2.5 bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-4 py-2" %>
</div>
