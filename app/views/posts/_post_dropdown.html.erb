<div data-controller="dropdown" class="relative flex justify-center">
  <button data-action="dropdown#toggle click@window->dropdown#hide" type="button" class="hover:text-gray-900">
    <%= render "shared/icons/dot_menu", class_list: "icon-medium fill-current" %>
  </button>
  <div data-dropdown-target="menu" class="dropdown-menu absolute z-10 top-full py-1">
    <ul>
      <li>
        <%= link_to "編集", edit_post_path, data: { action: "dropdown#toggle" }, class: "li-link" %>
        <%= button_to "削除", post_path, method: :delete, data: { turbo_confirm: '本当に削除しますか?' }, class: "li-link" %>
      </li>
    </ul>
  </div>
</div>
