<div data-controller="dropdown" class="relative my-auto flex justify-center px-2">
  <button data-action="dropdown#toggle click@window->dropdown#hide" type="button" class="hover:text-gray-900">
    <%= render "shared/icons/dot_menu", class_list: "icon-small fill-current" %>
  </button>
  <div data-dropdown-target="menu" class="dropdown-menu absolute z-10 top-full py-1">
    <ul>
      <li>
        <%= button_to "削除", post_comment_path(post_id, comment_id), method: :delete, data: { turbo_confirm: '本当に削除しますか?' }, class: "li-link" %>
      </li>
    </ul>
  </div>
</div>
