<% if notice.present? %>
  <div class="bg-opacity-0 relative items-center w-full px-6 mx-auto max-w-7xl">
    <div class="p-6 border-l-4 border-green-500 -6 rounded-r-xl bg-green-50">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= render "shared/icons/check_mark", class_list: "icon-small fill-green-400" %>
        </div>
        <div class="ml-3">
          <div>
            <p class="text-green-600"><%= notice %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
