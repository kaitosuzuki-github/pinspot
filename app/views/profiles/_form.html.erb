<%= form_with model: profile, class: "space-y-6" do |f| %>
  <%= render "shared/error", model: f.object %>
  <div class="relative h-fit">
    <div class="absolute w-full h-full flex items-center justify-center">
      <%= f.label :cover, class:"cover-image-button" do %>
        カバー画像の変更
      <% end %>
      <%= f.file_field :cover, class:"hidden" %>
    </div>
    <div class="bg-gray-100 aspect-[4/1] overflow-hidden">
      <% if profile.cover.attached? %>
        <%= image_tag profile.cover.variant(resize_to_limit: [1000, 1000]), id: "profile_cover_preview", class: "h-full w-full object-cover" %>
      <% else %>
        <%= image_tag "", id: "profile_cover_preview" %>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= f.label :avatar, class: "inline-block cursor-pointer" do %>
      <div class="w-16 h-16 rounded-full overflow-hidden">
        <% if profile.avatar.attached? %>
          <%= image_tag profile.avatar.variant(resize_to_limit: [100, 100]), class: "w-full h-full object-cover", id: "profile_avatar_preview" %>
        <% else %>
          <%= image_tag "", id: "profile_avatar_preview" %>
          <%= render "shared/icons/user", class_list: "w-16 h-16 fill-current" %>
        <% end %>
      </div>
    <% end %>
    <%= f.file_field :avatar, class:"hidden" %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, class: "text-field" %>
  </div>
  <div>
    <%= f.label :introduction %>
    <%= f.text_area :introduction, rows: "8", class: "text-field" %>
  </div>
  <div>
    <%= f.submit "変更", class: "submit-button" %>
    <%= link_to "キャンセル", profile, class: "cancel-button" %>
  </div>
<% end %>
