<div class="bg-white">
  <div class="mx-auto max-w-lg">
    <div class="p-4 space-y-4">
      <% if current_page?(followers_profile_path) %>
        <h2 class="text-gray-900 text-xl font-bold">フォロワー</h2>
      <% else %>
        <h2 class="text-gray-900 text-xl font-bold">フォロー中</h2>
      <% end %>
      <div class="space-y-2">
        <% @users.each do |user| %>
          <div class="flex gap-3 items-center justify-between">
            <%= link_to user.profile, class: "flex items-center gap-2" do %>
              <% if user.profile.avatar.attached? %>
                <div class="w-10 h-10 rounded-full overflow-hidden">
                  <%= image_tag user.profile.avatar.variant(resize_to_limit: [100, 100]), class: "w-full h-full object-cover" %>
                </div>
              <% else %>
                <%= render "shared/icons/user", class_list: "w-10 h-10 fill-current" %>
              <% end %>
              <p class="break-all max-w-xs text-gray-900"><%= user.profile.name %></p>
            <% end %>
            <%= render "shared/follow", user_id: user.id %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
