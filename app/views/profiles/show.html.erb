<div class="bg-white">
  <div class="px-6 max-w-7xl mx-auto">
    <div class="bg-gray-100 aspect-[4/1] overflow-hidden">
      <% if @profile.cover.present? %>
        <%= image_tag @profile.cover.variant(resize_to_limit: [1500, 1500]), class: "w-full h-full object-cover" %>
      <% end %>
    </div>
    <div class="p-4 space-y-4">
      <div class="relative">
        <div class="flex items-center justify-start md:justify-center gap-4">
          <% if @profile.avatar.present? %>
            <div class="w-16 h-16 rounded-full overflow-hidden">
              <%= image_tag @profile.avatar.variant(resize_to_limit: [100, 100]), class: "w-full h-full object-cover" %>
            </div>
          <% else %>
            <%= render "shared/icons/user", class_list: "w-16 h-16 text-gray-900" %>
          <% end %>
          <p class="text-xl font-semibold text-gray-900"><%= @profile.name %></p>
        </div>
        <div class="absolute top-0 left-0 w-full h-full flex justify-end items-center">
          <% if user_signed_in? %>
            <% if current_user.same_user?(@profile.user_id) %>
              <%= link_to edit_profile_path do %>
                <%= render "shared/icons/config", class_list: "w-8 h-8 text-gray-700" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="flex justify-center">
        <%= render "shared/follow", user_id: @profile.user.id %>
      </div>
      <div class="flex justify-center gap-4">
        <% if user_signed_in? %>
          <p class="text-gray-900 hover:text-gray-700"><%= @profile.user.followers.count %><%= link_to "フォロワー", followers_profile_path, class: "ml-2" %></p>
          <p class="text-gray-900 hover:text-gray-700"><%= @profile.user.followings.count %><%= link_to "フォロー中", following_profile_path, class: "ml-2" %></p>
        <% else %>
          <p class="text-gray-900 hover:text-gray-700"><%= @profile.user.followers.count %><span class="ml-2">フォロワー</span></p>
          <p class="text-gray-900 hover:text-gray-700"><%= @profile.user.followings.count %><span class="ml-2">フォロー中</span></p>
        <% end %>
      </div>
      <% if @profile.introduction.present? %>
        <div class="flex justify-center">
          <p class="text-sm text-gray-900 tracking-wide leading-relaxed"><%= safe_join(@profile.introduction.split("\n"), tag(:br)) %></p>
        </div>
      <% end %>
    </div>
    <hr>
    <div class="p-4">
      <%= turbo_frame_tag "profile_posts" do %>
        <%= render "profiles/shared/post_tab", user_id: @profile.user.id %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2">
          <%= render partial: "profiles/shared/post", collection: @posts %>
        </div>
      <% end %>
    </div>
  </div>
</div>
